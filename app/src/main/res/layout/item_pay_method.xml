<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/item_payMethod_container"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp">
        <CheckBox
            android:id="@+id/pay_method_checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/check_pay"
            android:button="@null"
            android:checked="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/game_icon"/>
            <TextView
                android:id="@+id/need_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600"
                android:textSize="16sp"
                android:textColor="@color/colorIndexFont"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_coin"
                android:textSize="16sp"
                android:textColor="@color/colorIndexFont"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:text="售价20元"
                android:textSize="12sp"
                android:textColor="@color/colorDanmu"
                />
        </LinearLayout>

    </FrameLayout>
</RelativeLayout>